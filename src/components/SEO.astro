---
const { title = 'The Tiny House Nation', description = 'Tiny house resources, reviews, and more.', canonical } = Astro.props;
---
<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonical ?? 'https://tfs2006.github.io/the_tiny_house_nation/'} />
  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonical ?? 'https://tfs2006.github.io/the_tiny_house_nation/'} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="The Tiny House Nation" />
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:site" content="@TinyHouseNation" />
</head>
